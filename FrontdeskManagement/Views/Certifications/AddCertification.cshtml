
@{
    ViewData["Title"] = "证照登记";
}

<h1></h1>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/layui-v2.5.6/layui/layui.js"></script>
<link href="~/lib/layui-v2.5.6/layui/css/layui.css" rel="stylesheet" />

<br />
<div>
    <button type="button" class="layui-btn layui-btn-primary" style="margin-left:910px;" onclick="Fh()">
        <i class="layui-icon">&#xe65c;</i> 返回
    </button>
    <button type="button" class="layui-btn layui-btn-primary" onclick="Sx()">
        <i class="layui-icon">&#xe9aa;</i> 刷新
    </button>
</div>
<br />
<table class="table table-bordered">
    <tr>
        <td class="text-center"><a style="color:red">*</a>名称</td>
        <td>
            <input class="form-control" id="txt_Name" type="text" />
        </td>
        <td class="text-center">编号</td>
        <td>
            <input class="form-control" id="txt_Number" type="text" />
        </td>
    </tr>
    <tr>
        <td class="text-center">签发机关</td>
        <td>
            <input class="form-control" id="txt_Authority" type="text" />
        </td>
        <td class="text-center">签发日期</td>
        <td>
            <input class="form-control" id="txt_Date" type="date" />
        </td>
    </tr>
    <tr>
        <td class="text-center">是否年审</td>
        <td>
            <input id="Review_shi" type="radio" name="sad" />是
            <input id="Review_fou" type="radio" name="sad" />否
        </td>
        <td class="text-center">下次年审日期</td>
        <td>
            <input class="form-control" id="txt_Annual" type="date" />
        </td>
    </tr>
    <tr>
        <td class="text-center">有效期</td>
        <td colspan="3">
            <input id="Validity_shi" type="radio" name="asd" />永久
            <input id="Validity_fou" type="radio" name="asd" />非永久
        </td>
    </tr>
    <tr>
        <td class="text-center">借用人</td>
        <td>
            <input class="form-control" id="txt_Loaner" type="text" />
        </td>
        <td class="text-center">管理人</td>
        <td>
            <input class="form-control" id="txt_Manager" type="text" />
        </td>
    </tr>
    <tr>
        <td class="text-center">描述</td>
        <td colspan="3">
            <textarea class="form-control" id="txt_Description" rows="2" cols="20"></textarea>
        </td>
    </tr>
</table>
<div>
    <button type="button" class="layui-btn layui-btn-normal layui-btn-radius" style="margin-left:500px;" onclick="Add()">确认</button>
    <button type="button" class="layui-btn layui-btn-primary layui-btn-radius">取消</button>
</div>
<script type="text/javascript">

    //添加
    function Add() {

        var obj = {
            "C_Name": $("#txt_Name").val(),
            "C_Number": $("#txt_Number").val(),
            "C_Authority": $("#txt_Authority").val(),
            "C_Date": $("#txt_Date").val(),
            "C_Review": $('#Review_shi:checked').val() ? true : false,
            "C_Annual": $("#txt_Annual").val(),
            "C_Validity": parseInt($('#Validity_shi:checked').val() ? 1 : 0),
            "C_Loaner": $("#txt_Loaner").val(),
            "C_Manager": $("#txt_Manager").val(),
            "C_Description": $("#txt_Description").val(),
        }

        if (obj.c_Name == "") {
            alert("名称不可以为空");
            window.location.reload();
            return;
        }
        var cc = JSON.stringify(obj);
        console.log(obj);
        $.ajax({
            url: 'http://localhost:57726/api/default/AddCertification',
            type: 'post',
            dataType: 'JSON',
            data: cc,
            contentType: 'application/json',
            success: function (d) {
                if (d > 0) {
                    alert("添加成功");
                    location.href = "/Certifications/Index";
                }
            }
        })
    }
    //刷新页面
    function Sx() {
        location.href = "/Certifications/AddCertification";
    }

    //返回列表
    function Fh() {
        location.href = "/Certifications/Index";
    }
</script>