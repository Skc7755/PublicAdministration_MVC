<script>

    AfarList();
    //资产归还申请
    function AfarList() {
        jQuery.ajax({
            url: "http://localhost:57726/api/default/AfarList",
            type: "get",
            dataType: "json",
            success: function (data) {
                $("#dv").empty();
                var tbr = '<table class="table table-bordered">' +
                    "<tr>" +
                    "<th>" + '主题 ' + "</th>" +
                    "<th>" + '申请人' + "</th>" +
                    "<th>" + '所属部门' + " </th>" +
                    "<th>" + '申请日期' + " </th>" +
                    "<th>" + '归还数量' + " </th>" +
                    "</tr>" +
                    '<tbody id="tb">' +
                    '</tbody>' +
                    '</table>';
                $("#dv").append(tbr);
                $(data).each(function () {
                    var str = " <tr>" +
                        "<td>" + "<a href='#' onclick='AfarListDetail(" + this.id + ")'>" + this.subject + "</a>" + "</td>" +
                        "<td>" + this.proposer + "</td>" +
                        "<td>" + this.department + "</td>" +
                        "<td>" + this.applicationDate + "</td>" +
                        "<td>" + this.amount + "</td>" +
                        "</tr>";
                    $("#tb").append(str);
                })

            }
        })

    }
    //资产归还详情
    function AfarListDetail(id) {

        location.href = "/Default/AfarListDetail?id=" + id;

    }

</script>

