        <style type="text/css">
            #dv3 {
                display: flex;
                align-items: start;
                height: 100vh;
                background: #f8f8f8f8;
                font-size: 52px;
                font-family: 汉仪竹节体简;
                font-weight: bold;
            }

            .wave {
                float: left;
                margin: 20px;
                animation: wave ease-in-out 0.5s infinite alternate;
                transform-origin: center -20px;
            }

                .wave:hover {
                    animation-play-state: paused;
                }

                .wave img {
                    border: 9px solid #696767;
                    display: block;
                    width: 200px;
                    height: 250px;
                }

                .wave figcaption {
                    color: aqua;
                    text-align: center;
                }

                .wave:after {
                    content: '';
                    position: absolute;
                    width: 20px;
                    height: 20px;
                    border: 6px dashed #000000;
                    top: -10px;
                    left: 50%;
                    z-index: 0;
                    border-bottom: none;
                    border-right: none;
                    transform: rotate(45deg);
                }

                .wave:before {
                    content: '';
                    position: absolute;
                    top: -23px;
                    left: 50%;
                    display: block;
                    height: 44px;
                    width: 47px;
                    background-repeat: no-repeat;
                    z-index: 16;
                }

            @@keyframes wave {
                0% {
                    transform: rotate(3deg);
                }

                100% {
                    transform: rotate(-3deg);
                }
            }
        </style>

    </body>
    </html>
    <script>
        CarApplicationList();

         function CarApplicationList() {
           jQuery.ajax({
            url: "http://localhost:57726/api/default/CarApplicationList",
            type: "get",
            dataType: "json",
            success: function (data) {
                $("#dv").empty();
                var tbr = '<table class="table table-bordered">' +
                    "<tr>" +
                    "<th>" + '主题' + "</th>" +
                    "<th>" + '申请人' + "</th>" +
                    "<th>" + '所属部门' + " </th>" +
                    "<th>" + '制定车辆' + " </th>" +
                    "<th>" + '时间段' + " </th>" +
                    "</tr>" +
                    '<tbody id="tb">' +
                    '</tbody>' +
                    '</table>';
                $("#dv").append(tbr);
                $(data).each(function () {
                    var str = " <tr>" +
                        "<td>" + "<a href='#' onclick='CarApplicationDetail(" + this.id + ")'>" + this.subject + "</a>" + "</td>" +
                        "<td>" + this.proposer  + "</td>" +
                        "<td>" + this.department + "</td>" +
                        "<td>" + this.vehicleName + "</td>" +
                        "<td>" + this.timeQuantum + "</td>" +
                        "</tr>";
                    $("#tb").append(str);
                })
            }
        })
    }

    //用车申请明细
    function CarApplicationDetail(id) {
         location.href = "/Default/CarApplicationDetail?id=" + id;
    }


    </script>

